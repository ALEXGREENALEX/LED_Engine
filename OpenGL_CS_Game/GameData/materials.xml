<!--Список материалов и их свойств
	Name
		string
	Shader
		string
	Color
		Vector4 RGBA;
		Если не указать или оставить пустым - Случайній цвет;
	Texture
		string;
		Колличество от 0 до 32
	CullFace
		bool
		Не работает для Transparent=true - в прозрачном материале всегда
		рендндерится задняя, а потом передняя стороні граней!
	Transparent
		bool
	SpecularReflectivity
		Vector3
	AmbientReflectivity
		Vector3
	SpecularShininess
		float
	ReflectionFactor
		float
	RefractiveIndex
		float
-->

<Materials>
	<Material>
		<Name>TransparentRedGlass</Name>
		<Shader></Shader>
		<Color>1.0 0.0 0.0 0.5</Color>
		<Transparent>True</Transparent>
	</Material>
	<Material>
		<Name>SkyCubemap_Storforsen</Name>
		<Shader>CubemapSky</Shader>
		<CubemapTexture>SkyCubemap_Storforsen</CubemapTexture>
		<CullFace>True</CullFace>
	</Material>
	<Material>
		<Name>SkyCubemap_Yokohama3</Name>
		<Shader>CubemapSky</Shader>
		<CubemapTexture>SkyCubemap_Yokohama3</CubemapTexture>
		<CullFace>True</CullFace>
	</Material>
	<Material>
		<Name>Reflection</Name>
		<Shader>ReflectRefract</Shader>
		<Color>0.831 0.686 0.216 0.9</Color>
		<CubemapTexture>Cubemap_Storforsen</CubemapTexture>
		<ReflectionFactor>1.0</ReflectionFactor>
	</Material>
	<Material>
		<Name>Refraction</Name>
		<Shader>ReflectRefract</Shader>
		<Color>0.5 0.5 0.9 0.4</Color>
		<CubemapTexture>Cubemap_Storforsen</CubemapTexture>
		<ReflectionFactor>0.1</ReflectionFactor>
		<RefractiveIndex>0.9</RefractiveIndex>
	</Material>
	<Material>
		<Name>BrickWall</Name>
		<Shader>PhongNormalMap</Shader>
		<Texture>brick-wall</Texture>
		<Texture>brick-wall_N</Texture>
		<CullFace>False</CullFace>
		<SpecularReflectivity>0.2 0.2 0.2</SpecularReflectivity>
		<AmbientReflectivity>0.05 0.05 0.05</AmbientReflectivity>
		<SpecularShininess>1.0</SpecularShininess>
	</Material>
	<Material>
		<Name>Keypad</Name>
		<Shader>PhongNormalMap</Shader>
		<Texture>Keypad</Texture>
		<Texture>Keypad_N</Texture>
		<SpecularReflectivity>0.2 0.2 0.2</SpecularReflectivity>
		<AmbientReflectivity>0.1 0.1 0.1</AmbientReflectivity>
		<SpecularShininess>1.0</SpecularShininess>
	</Material>
</Materials>