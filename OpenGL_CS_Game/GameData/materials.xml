<!--Список материалов и их свойств
	Name
		string
	Shader
		string
	Color
		Vector4 RGBA;
		Если не указать или оставить пустым - Случайній цвет;
	Texture
		string;
		Колличество от 0 до 32
	CullFace
		bool
	Transparent
		bool
	SpecularReflectivity
		Vector3
	AmbientReflectivity
		Vector3
	SpecularShininess
		float
	ReflectionFactor
		float
	RefractiveIndex
		float
-->

<Materials>
	<Material>
		<Name></Name>
		<Shader></Shader>
		<CullFace>False</CullFace>
	</Material>
	<Material>
		<Name>Checker</Name>
		<Shader>DefaultTexture</Shader>
		<Texture></Texture>
		<CullFace>False</CullFace>
	</Material>
	<Material>
		<Name>TransparentRedGlass</Name>
		<Shader></Shader>
		<Color>1.0 0.0 0.0 0.5</Color>
		<CullFace>False</CullFace>
		<Transparent>True</Transparent>
	</Material>
	<Material>
		<Name>SkyCubemap_Test</Name>
		<Shader>CubemapSky</Shader>
		<CubemapTexture>SkyCubemap_Test</CubemapTexture>
		<CullFace>False</CullFace>
	</Material>
	<Material>
		<Name>SkyCubemap_Storforsen</Name>
		<Shader>CubemapSky</Shader>
		<CubemapTexture>SkyCubemap_Storforsen</CubemapTexture>
		<CullFace>False</CullFace>
	</Material>
	<Material>
		<Name>SkyCubemap_Yokohama3</Name>
		<Shader>CubemapSky</Shader>
		<CubemapTexture>SkyCubemap_Yokohama3</CubemapTexture>
		<CullFace>False</CullFace>
	</Material>
	<Material>
		<Name>Reflection</Name>
		<Shader>Reflection</Shader>
		<Color>0.5 0.5 0.5 1.0</Color>
