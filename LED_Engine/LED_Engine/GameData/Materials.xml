<!--Параметры настройки материалов
	Name
		string
	Shader
		string
	CullFace
		bool
		Не работает для Transparent=true - в прозрачном материале всегда
		рендерится задняя, а потом передняя стороны граней!
	Transparent
		bool
	Kd - Diffuse Color(Diffuse Reflectivity)
		float Value (result Value Value Value 1.0f);
		Vector3 RGB (result R G B 1.0f);
		Vector4 RGBA (result R G B A);
		Если не указать или оставить пустым - Случайный цвет;
	Ks - Specular Reflectivity
		Vector3
	Ka - Ambient Reflectivity
		Vector3
	Ke - Emissive Color
		Vector3
	Shininess - Specular Shininess
		float
	ReflectionFactor
		float
	RefractiveIndex
		float
	Texture[]
		string Name;
		uint TextureUnit;
		
		Пример:
			<Texture>
				<Name>AlphaTest</Name>
				<TextureUnit>0</TextureUnit>
			</Texture>
-->

<Materials>
	<Material>
		<Name>TransparentRedGlass</Name>
		<Shader></Shader>
		<Transparent>True</Transparent>
		<Kd>1.0 1.0 1.0 0.5</Kd>
		
		<Texture>
			<Name>AlphaTest</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
	</Material>
	<Material>
		<Name>SkyCubemap_Storforsen</Name>
		<Shader>CubemapSky</Shader>
		<CullFace>True</CullFace>
		
		<Texture>
			<Name>SkyCubemap_Storforsen</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
	</Material>
	<Material>
		<Name>SkyCubemap_Yokohama3</Name>
		<Shader>CubemapSky</Shader>
		<CullFace>True</CullFace>
		
		<Texture>
			<Name>SkyCubemap_Yokohama3</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
	</Material>
	<Material>
		<Name>Reflection</Name>
		<Shader>ReflectRefract</Shader>
		<CullFace>True</CullFace>
		<Kd>0.831 0.686 0.216 0.9</Kd>
		<ReflectionFactor>1.0</ReflectionFactor>
		
		<Texture>
			<Name>Cubemap_Storforsen</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<!--<Texture>
			<Name>AlphaTest</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>-->
	</Material>
	<Material>
		<Name>Refraction</Name>
		<Shader>ReflectRefract</Shader>
		<Kd>0.8 0.95 1.0 0.4</Kd>
		<ReflectionFactor>0.1</ReflectionFactor>
		<RefractiveIndex>0.9</RefractiveIndex>
		
		<Texture>
			<Name>Cubemap_Storforsen</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<!--<Texture>
			<Name>AlphaTest</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>-->
	</Material>
	<Material>
		<Name>ParallaxMapping</Name>
		<Shader>ParallaxMapping</Shader>
		<CullFace>True</CullFace>
		
		<Texture>
			<Name>ParallaxTest_D</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<Texture>
			<Name>ParallaxTest_N</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>
		<Texture>
			<Name>ParallaxTest_S</Name>
			<TextureUnit>2</TextureUnit>
		</Texture>
		<Texture>
			<Name>ParallaxTest_H</Name>
			<TextureUnit>5</TextureUnit>
		</Texture>
	</Material>
	<Material>
		<Name>BrickWall</Name>
		<Shader>Light</Shader>
		<CullFace>True</CullFace>
		<Ks>0.4</Ks>
		<Ka>0.1</Ka>
		<Shininess>40.0</Shininess>
		
		<Texture>
			<Name>brick-wall</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<Texture>
			<Name>brick-wall_N</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>
	</Material>
	<Material>
		<Name>Keypad</Name>
		<Shader>Light</Shader>
		<Ks>1.0</Ks>
		<Ke>1.3</Ke>
		<Ka>0.5</Ka>
		<Shininess>50.0</Shininess>
		
		<Texture>
			<Name>Keypad_D</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<Texture>
			<Name>Keypad_N</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>
		<Texture>
			<Name>Keypad_S</Name>
			<TextureUnit>2</TextureUnit>
		</Texture>
		<Texture>
			<Name>Keypad_E</Name>
			<TextureUnit>3</TextureUnit>
		</Texture>
		<Texture>
			<Name>Keypad_AO</Name>
			<TextureUnit>4</TextureUnit>
		</Texture>
	</Material>
</Materials>