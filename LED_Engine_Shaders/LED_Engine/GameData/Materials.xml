<!--Список материалов и их свойств
	Name
		string
	Shader
		string
	Color
		float Value (result Value Value Value 1.0f);
		Vector3 RGB (result R G B 1.0f);
		Vector4 RGBA (result R G B A);
		Если не указать или оставить пустым - Случайный цвет;
	Texture
		string;
		Количество от 0 до 32
	CullFace
		bool
		Не работает для Transparent=true - в прозрачном материале всегда
		рендерится задняя, а потом передняя стороны граней!
	Transparent
		bool
	SpecularReflectivity
		Vector3
	AmbientReflectivity
		Vector3
	SpecularShininess
		float
	ReflectionFactor
		float
	RefractiveIndex
		float
-->

<Materials>
	<Material>
		<Name>TransparentRedGlass</Name>
		<Shader>Unlit</Shader>
		<!--<Texture>
			<Name>AlphaTest</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>-->
		<Color>1.0 0.0 0.0 0.5</Color>
		<Transparent>True</Transparent>
	</Material>
	<Material>
		<Name>SkyCubemap_Storforsen</Name>
		<Shader>CubemapSky</Shader>
		<Texture>
			<Name>SkyCubemap_Storforsen</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<CullFace>True</CullFace>
	</Material>
	<Material>
		<Name>SkyCubemap_Yokohama3</Name>
		<Shader>CubemapSky</Shader>
		<Texture>
			<Name>SkyCubemap_Yokohama3</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<CullFace>True</CullFace>
	</Material>
	<Material>
		<Name>Reflection</Name>
		<Shader>ReflectRefract</Shader>
		<Color>0.831 0.686 0.216 0.9</Color>
		<Texture>
			<Name>Cubemap_Storforsen</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<!--<Texture>
			<Name>AlphaTest</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>-->
		<ReflectionFactor>1.0</ReflectionFactor>
		<CullFace>True</CullFace>
	</Material>
	<Material>
		<Name>Refraction</Name>
		<Shader>ReflectRefract</Shader>
		<Color>0.8 0.95 1.0 0.4</Color>
		<Texture>
			<Name>Cubemap_Storforsen</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<!--<Texture>
			<Name>AlphaTest</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>-->
		<ReflectionFactor>0.1</ReflectionFactor>
		<RefractiveIndex>0.9</RefractiveIndex>
	</Material>
	<Material>
		<Name>BrickWall</Name>
		<Shader>PhongNormalMap</Shader>
		<Texture>
			<Name>brick-wall</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<Texture>
			<Name>brick-wall_N</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>
		<CullFace>True</CullFace>
		<SpecularReflectivity>0.2 0.2 0.2</SpecularReflectivity>
		<AmbientReflectivity>0.05 0.05 0.05</AmbientReflectivity>
		<SpecularShininess>1.0</SpecularShininess>
	</Material>
	<Material>
		<Name>ReliefParallaxTest</Name>
		<Shader>ReliefParallaxMap</Shader>
		<Texture>
			<Name>ReliefParallaxTest_D</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<Texture>
			<Name>ReliefParallaxTest_N</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>
		<Texture>
			<Name>ReliefParallaxTest_S</Name>
			<TextureUnit>2</TextureUnit>
		</Texture>
		<Texture>
			<Name>ReliefParallaxTest_H</Name>
			<TextureUnit>3</TextureUnit>
		</Texture>
		<CullFace>True</CullFace>
	</Material>
	<Material>
		<Name>Light</Name>
		<Shader>Light</Shader>
		<Texture>
			<Name>brick-wall</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<CullFace>True</CullFace>
	</Material>
	<Material>
		<Name>Keypad</Name>
		<Shader>PhongNormalMap</Shader>
		<Texture>
			<Name>Keypad</Name>
			<TextureUnit>0</TextureUnit>
		</Texture>
		<Texture>
			<Name>Keypad_N</Name>
			<TextureUnit>1</TextureUnit>
		</Texture>
		<SpecularReflectivity>0.2 0.2 0.2</SpecularReflectivity>
		<AmbientReflectivity>0.1 0.1 0.1</AmbientReflectivity>
		<SpecularShininess>1.0</SpecularShininess>
	</Material>
</Materials>